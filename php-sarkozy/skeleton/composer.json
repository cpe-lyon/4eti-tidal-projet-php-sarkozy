{
    "name": "php-sarkozy/skeleton",
    "description": "A skeleton app for PHP Sarkozy",
    "type": "project",
    "license": "MIT",
    "require": {
        "php-sarkozy/core": "@dev",
        "php-sarkozy/http": "@dev",
        "php-sarkozy/http-routing": "@dev",
        "php-sarkozy/le-temps-des-templates": "@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../core",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../http",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../http-routing",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../le-temps-des-templates",
            "options": {
                "symlink": true
            }
        }
    ],
    "scripts": {
        "run-server": [
            "Composer\\Config::disableProcessTimeout",
            "php ./src/config/runner/start-server.php"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "php -dxdebug.remote_enable=1 -dxdebug.remote_mode=req -dxdebug.remote_host=127.0.0.1 -dxdebug.remote_port=9000 -dxdebug.remote_autostart=1"
        ],
        "ump": [
            "Composer\\Config::disableProcessTimeout",
            "php ./scripts/ump/ump.php"
        ]
    }    
}